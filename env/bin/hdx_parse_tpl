#!/usr/bin/env bash
# Template parser
# =================
# Populates a file with env vars
# @todo add help & implement templates

# Based on https://gist.github.com/pkuczynski/8665367
function perlParse(){
    # https://stackoverflow.com/questions/2914220/bash-templating-how-to-build-configuration-files-from-templates-with-bash
    perl -p -e 's/\$\{([^}]+)\}/defined $ENV{$1} ? $ENV{$1} : $&/eg' < $1
}

perlParse $@